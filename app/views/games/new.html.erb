<h1 class="container">New game</h1>

<ul class="container">
  <% @letters.each do |letter| %>
  <li class="btn btn-info"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" class="container group-control">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="question">What is the longest word you can find?</label>
  <div class="d-flex">
    <input type="text" name="word" class="form-control">
    <input type="submit" class="btn btn-success ml-1">
  </div>
</form>
